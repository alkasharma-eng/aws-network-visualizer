# AWS Network Visualizer - Environment Configuration

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
AWS_NET_VIZ_APP_NAME=aws-network-visualizer
AWS_NET_VIZ_APP_VERSION=1.0.0
AWS_NET_VIZ_ENVIRONMENT=development  # development, staging, production
AWS_NET_VIZ_DEBUG=false

# =============================================================================
# AWS SETTINGS
# =============================================================================
AWS_NET_VIZ_AWS_REGION=us-east-1
AWS_NET_VIZ_AWS_PROFILE=default
AWS_NET_VIZ_AWS_REGIONS=us-east-1,us-west-2  # Comma-separated list

# =============================================================================
# OBSERVABILITY SETTINGS
# =============================================================================
# Enable/disable observability features
AWS_NET_VIZ_ENABLE_XRAY=true
AWS_NET_VIZ_ENABLE_METRICS=true
AWS_NET_VIZ_ENABLE_STRUCTURED_LOGGING=true
AWS_NET_VIZ_LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# CloudWatch configuration
AWS_NET_VIZ_CLOUDWATCH_NAMESPACE=AWS/NetworkVisualizer
AWS_NET_VIZ_CLOUDWATCH_LOG_GROUP=/aws/network-visualizer

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
AWS_NET_VIZ_MAX_CONCURRENT_COLLECTORS=10
AWS_NET_VIZ_API_CALL_TIMEOUT=30
AWS_NET_VIZ_MAX_RETRY_ATTEMPTS=3
AWS_NET_VIZ_RETRY_BASE_DELAY=1.0

# =============================================================================
# STORAGE SETTINGS
# =============================================================================
AWS_NET_VIZ_DYNAMODB_TABLE_NAME=network-visualizer-topology
AWS_NET_VIZ_S3_BUCKET_NAME=your-bucket-name
AWS_NET_VIZ_ELASTICACHE_ENDPOINT=your-cache.amazonaws.com:6379
AWS_NET_VIZ_CACHE_TTL_SECONDS=3600

# =============================================================================
# AI ANALYSIS SETTINGS (Amazon Bedrock)
# =============================================================================
AWS_NET_VIZ_ENABLE_AI_ANALYSIS=true
AWS_NET_VIZ_BEDROCK_MODEL_ID=anthropic.claude-3-5-sonnet-20241022-v2:0
AWS_NET_VIZ_BEDROCK_REGION=us-east-1
AWS_NET_VIZ_AI_ANALYSIS_MAX_TOKENS=4096
AWS_NET_VIZ_AI_ANALYSIS_TEMPERATURE=0.0

# =============================================================================
# VISUALIZATION SETTINGS
# =============================================================================
AWS_NET_VIZ_DEFAULT_OUTPUT_FORMAT=png  # png, svg, html, json
AWS_NET_VIZ_VISUALIZATION_WIDTH=1920
AWS_NET_VIZ_VISUALIZATION_HEIGHT=1080

# =============================================================================
# RESOURCE COLLECTION SETTINGS
# =============================================================================
# Enable/disable specific resource types
AWS_NET_VIZ_COLLECT_VPCS=true
AWS_NET_VIZ_COLLECT_SUBNETS=true
AWS_NET_VIZ_COLLECT_EC2_INSTANCES=true
AWS_NET_VIZ_COLLECT_INTERNET_GATEWAYS=true
AWS_NET_VIZ_COLLECT_NAT_GATEWAYS=true
AWS_NET_VIZ_COLLECT_TRANSIT_GATEWAYS=true
AWS_NET_VIZ_COLLECT_SECURITY_GROUPS=true
AWS_NET_VIZ_COLLECT_ROUTE_TABLES=true
AWS_NET_VIZ_COLLECT_NETWORK_ACLS=true
AWS_NET_VIZ_COLLECT_VPC_PEERING=true
AWS_NET_VIZ_COLLECT_VPN_CONNECTIONS=true
AWS_NET_VIZ_COLLECT_DIRECT_CONNECT=true
AWS_NET_VIZ_COLLECT_LOAD_BALANCERS=true
AWS_NET_VIZ_COLLECT_RDS_INSTANCES=true
AWS_NET_VIZ_COLLECT_LAMBDA_ENIS=true

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
AWS_NET_VIZ_SECRETS_MANAGER_ENABLED=false
AWS_NET_VIZ_ENCRYPTION_AT_REST=true
